<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Para seleccionar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgvPiedra"
            android:layout_width="@dimen/ladoImagen"
            android:layout_height="wrap_content"
            android:src="@drawable/piedra"

            />

        <ImageView
            android:id="@+id/imgvPapel"
            android:layout_width="@dimen/ladoImagen"
            android:layout_height="wrap_content"
            android:src="@drawable/papel"
            />

        <ImageView
            android:id="@+id/imgvTijera"
            android:layout_width="@dimen/ladoImagen"
            android:layout_height="wrap_content"
            android:src="@drawable/tijera"
            />

    </LinearLayout>

    <!--Para VS-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/incognita"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtvs"
            android:textSize="@dimen/txtvs"/>

        <ImageView
            android:id="@+id/imgvSistema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/incognita"
            />

    </LinearLayout>

    <!--Para botones-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtjugar"/>
        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnreiniciar"/>

    </LinearLayout>

</LinearLayout>